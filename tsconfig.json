{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],  // Alias for components
      "@utils/*": ["src/utils/*"],            // Alias for utilities
      "@hooks/*": ["src/hooks/*"],            // Alias for hooks
      "@styles/*": ["src/styles/*"],
      "@store/*": ["src/store/*"],         // Alias for styles
      "@routes/*":["src/routes/*"],      
    },
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*"
  ],

}
